<Window x:Class="PedalBuilder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PedalBuilder"
        mc:Ignorable="d"
        Title="MainWindow" Height="825.5" Width="1333.5" Loaded="Window_Loaded">
    <Window.Resources>
        <CollectionViewSource x:Key="pedalViewSource" d:DesignSource="{d:DesignInstance {x:Type local:Pedal}, CreateList=True}"/>
        <CollectionViewSource x:Key="componentViewSource" d:DesignSource="{d:DesignInstance {x:Type local:Component}, CreateList=True}"/>
        <CollectionViewSource x:Key="partViewSource" d:DesignSource="{d:DesignInstance {x:Type local:Part}, CreateList=True}"/>
    </Window.Resources>
    <Grid>
        <Menu x:Name="menu" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="1326"/>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="775" Margin="0,20,0,0" VerticalAlignment="Top" Width="1326">
            <TabItem Header="Pedals">
                <Grid Background="#FFE5E5E5" Margin="0,0,-3,-3" DataContext="{StaticResource pedalViewSource}">
                    <DataGrid x:Name="pedalDataGrid" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" Margin="10,10,10,78" RowDetailsVisibilityMode="VisibleWhenSelected" GridLinesVisibility="Horizontal" SelectionChanged="pedalDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn x:Name="nameColumn" Binding="{Binding Name}" Header="Name" Width="200"/>
                            <DataGridTextColumn x:Name="notesColumn" Binding="{Binding Notes}" Header="Notes" Width="*"/>
                            <DataGridTextColumn x:Name="pedalIdColumn" Binding="{Binding PedalId}" Header="Pedal Id" Width="SizeToHeader" Visibility="Hidden"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button x:Name="btnPedalUpdate" Content="UPDATE" HorizontalAlignment="Left" Margin="284,677,0,0" VerticalAlignment="Top" Width="103" Height="33" Background="White" BorderBrush="#FF0056BD" Click="btnPedalUpdate_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Components">
                <Grid Background="#FFE5E5E5" Margin="0,0,-4,-1" DataContext="{StaticResource componentViewSource}">
                    <DataGrid x:Name="componentDataGrid" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" Margin="10,41,480,120" RowDetailsVisibilityMode="VisibleWhenSelected" GridLinesVisibility="Horizontal">
                        <DataGrid.Columns>
                            <DataGridTextColumn x:Name="componentIdColumn" Binding="{Binding ComponentId}" Header="Component Id" Width="SizeToHeader" Visibility="Hidden"/>
                            <DataGridTextColumn x:Name="typeColumn" Binding="{Binding Type}" Header="Type" Width="75" SortDirection="Ascending"/>
                            <DataGridTextColumn x:Name="valueColumn" Binding="{Binding Value}" Header="Value" Width="100" SortDirection="Ascending"/>
                            <DataGridTextColumn x:Name="priceColumn" Binding="{Binding Price}" Header="Price" Width="SizeToHeader"/>
                            <DataGridTextColumn x:Name="notesColumn1" Binding="{Binding Notes}" Header="Notes" Width="150"/>
                            <DataGridTextColumn x:Name="urlColumn" Binding="{Binding Url}" Header="Url" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button x:Name="btnUpdateComponent" Content="UPDATE COMPONENTS" HorizontalAlignment="Left" Margin="10,633,0,0" VerticalAlignment="Top" Width="168" Height="44" BorderBrush="#FF0056BD" Background="White" Click="btnUpdateComponent_Click"/>
                    <Label x:Name="lblPedalName" Content="Name" HorizontalAlignment="Left" Margin="849,10,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="lblPedalCostStatic" Content="Cost" HorizontalAlignment="Left" Margin="1146,10,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="lblPedalCost" Content="0.00" HorizontalAlignment="Left" Margin="1203,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.224,-0.865" Width="46"/>
                    <DataGrid x:Name="partDataGrid" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding Path=SelectedValue.Parts, ElementName=pedalDataGrid}" Margin="849,41,75,120" RowDetailsVisibilityMode="VisibleWhenSelected" GridLinesVisibility="Horizontal" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn x:Name="component_ComponentIdColumn" Binding="{Binding Component_ComponentId}" Header="Component Component Id" Width="SizeToHeader" Visibility="Hidden"/>
                            <DataGridTextColumn x:Name="idColumn" Binding="{Binding Id}" Header="Id" Width="SizeToHeader" Visibility="Hidden"/>
                            <DataGridTextColumn x:Name="nameColumn1" Binding="{Binding Name}" Header="Name" Width="SizeToHeader"/>
                            <DataGridTextColumn x:Name="pedal_PedalIdColumn" Binding="{Binding Pedal_PedalId}" Header="Pedal Pedal Id" Width="SizeToHeader" Visibility="Hidden"/>
                            <DataGridTextColumn x:Name="partComponentValueColumn" Binding="{Binding Component.Value}" Header="Value" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <Label x:Name="lblPartName" Content="Part Name" HorizontalAlignment="Left" Margin="564,642,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="txtPartName" HorizontalAlignment="Left" Height="22" Margin="635,646,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="72" BorderBrush="#FF0056BD" SpellCheck.IsEnabled="True"/>
                    <Button x:Name="btnAddComponentToPedal" Content="ADD TO PEDAL" HorizontalAlignment="Left" Margin="723,639,0,0" VerticalAlignment="Top" Width="121" Height="32" Background="White" BorderBrush="#FF0056BD" Click="btnAddComponentToPedal_Click"/>
                    <Button x:Name="btnUpdateParts" Content="UPDATE PARTS" HorizontalAlignment="Left" Margin="1140,633,0,0" VerticalAlignment="Top" Width="109" Height="44" BorderBrush="#FF0056BD" Background="White"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
